# @package _global_

name: pix2vox_aug

defaults:
  - override /model: pix2vox

trainer:
  min_epochs: 100
  max_epochs: 300

data:
  batch_size: 24
  include_augmentations: true
  image_transforms:
    _target_: torchvision.transforms.Compose
    transforms:
      - _target_: torchvision.transforms.Resize
        size: [224, 224]
      - _target_: torchvision.transforms.Grayscale
        num_output_channels: 3
      - _target_: torchvision.transforms.ToTensor
      - _target_: torchvision.transforms.Normalize
        mean: [0.485, 0.456, 0.406]
        std:  [0.229, 0.224, 0.225]

model:
  _target_: core.models.pix2vox.Pix2Vox
  lr: 1e-4
  pretrained: ./pretrained/Pix2Vox-A-ShapeNet.pth
  merger_kickin: 25
  refiner_kickin: 50
  refiner_dropout: 0.0
  frozen:
    - encoder
    - decoder